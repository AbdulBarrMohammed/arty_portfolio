<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/cardsStyle.css">
    <title>Locations</title>
</head>
<body>
    <%- include('../partials/sidebar.ejs') %>
    <%- include('../partials/search.ejs') %>
    <div class="content-container">
        <div class="title-card orange">
            <h2><%= title %></h2>
        </div>
        <div class="artworks-container">
            <% locations.map((location, index) => { %>
                    <div class="artwork-card">
                        <div class="bottom">
                            <a href="/category/locations/<%= location.id %>">
                                <h1><%=location.city%></h1>
                            </a>
                          <div class="bottom-info">
                            <div class="bottom-buttons">
                                <form action="/category/locations/delete/<%= location.id %>" method="POST" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this location?');"><img src="/images/trash-can-outline.svg"></button>
                                </form>
                            </div>
                          </div>
                        </div>
                      </div>
              <% }) %>
        </div>

    </div>

</body>
</html>
